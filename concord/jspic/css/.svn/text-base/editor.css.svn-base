
/* editor window */

.EditorStyle {
  font-family: monospace;
  font-weight: normal;
  font-size: 11px;
  border: 0px;
  padding: 0px;
  margin: 0px;
  overflow: hidden;
  text-wrap: none;
}

.EditorLine {
  position: relative;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 13px;
  background-color: #ffd;
}

.EditorHighlight {
  background-color: #dfd;
  border-bottom: solid 1px #8f8;
  border-top: solid 1px #8f8;
}

.EditorGlyph {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 15px;
}

.EditorNumber {
  position: absolute;
  font-weight: bold;
  top: 0px;
  bottom: 0px;
  left: 15px;
  width: 34px;
  border-right: 1px solid black;
}

.EditorText {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 54px;
  right: 0px;
}

.EditorInput {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}



